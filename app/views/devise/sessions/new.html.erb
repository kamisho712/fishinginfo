<head>
  <link href="signin.css" rel="stylesheet">
</head>
<body class="text-center"> 
  <main class="form-signin">
    <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
      <img class="mb-4" src="/assets/fishing.png" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

      <div class="form-floating">
        <%= f.email_field :email, class:"form-control", id:"floatingInput", placeholder:"Email adress", autofocus: true %>
        <%= f.label :email %>
      </div>
      <div class="form-floating">
        <%= f.password_field :password, class:"form-control", id:"floatingPassword", placeholder:"Password" %>
        <%= f.label :password %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %><br />
        </div>
      <% end %>

      <div class='login-btn'>
        <%= f.submit "ログイン" ,class:"w-100 btn btn-lg btn-primary" %>
      </div>
    <% end %>
  </main>
</body>
